<% if current_user.status == "admin" %>
  <h2>User listing</h2>

  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>first name</th>
        <th>last name</th>
        <th>email</th>
        <th>status</th>
        <!-- <th colspan="3">Actions</th> -->
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name%></td>
          <td><%= user.last_name%></td>
          <td><%= user.email%></td>
          <td><%= user.status%></td>
        </tr>
      <% end %>  
    </tbody>
  </table>
<% end %>

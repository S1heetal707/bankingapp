<h1 class="text-center">Edit Account</h1>

<div class="row justify-content-center">
  <div class="col-md-4">
    <%= form_with model: @account do |form| %>
      <div class="form-group">
        <%= form.label :first_name %><br>
        <%= form.text_field :first_name , class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= form.label :last_name%><br>
        <%= form.text_field :last_name , class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :address%><br>
        <%= form.text_field :address , class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :gender%><br>
        <%= form.text_field :gender , class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :open_date%><br>
        <%= form.text_field :open_date , class: "form-control" %>
      </div>
      <br>
       <div >
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
<h1 class="text-center">Add New Account</h1>

<div class="row justify-content-center">
  <div class="col-md-4">
    <%= form_with model: @account do |form| %>
      <div class="form-group">
        <%= form.label :first_name %><br>
        <%= form.text_field :first_name , class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= form.label :last_name%><br>
        <%= form.text_field :last_name , class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :address%><br>
        <%= form.text_field :address , class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :gender%><br>
        <%= form.text_field :gender , class: "form-control" %>
      </div>
      <br>
      <div class="form-group">
        <%= form.select :user_id, User.all.collect {|p| [p.first_name,p.last_name ,p.id ] } %>
      </div>
      <br>
      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>

<h2>Account listing</h2>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>first name</th>
      <th>last name</th>
      <th>gender</th>
      <th>address</th>
      <th>open_date</th>
      <th>account_balance</th>
      <th colspan="3">Actions</th>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.first_name%></td>
        <td><%= account.last_name%></td>
        <td><%= account.gender%></td>
        <td><%= account.address%></td>
        <td><%= account.open_date%></td>
        <td><%= account.balance%></td>
        <td><%= link_to "show", account,class:"btn btn-primary" %></td>
        <td><%= link_to "edit", edit_account_path(account),class:"btn btn-primary" %></td>
        <td><%= link_to "destroy",account,class:"btn btn-primary", data: { turbo_method: :delete,
            turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>  
  </tbody>
</table>